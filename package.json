{
  "name": "mms-base",
  "version": "1.0.0",
  "description": "MMS Base Shopify Theme",
  "main": "index.js",
  "scripts": {
    "postinstall": "node .husky/install.mjs",
    "build": "webpack",
    "eslint": "./node_modules/.bin/eslint",
    "shopify": "./node_modules/.bin/shopify",
    "format:js": "prettier ./src/js/**/*.js --write",
    "start": "npm-run-all --parallel dev build:watch lint:watch",
    "dev": "shopify theme dev --environment development",
    "build:watch": "NODE_ENV=development webpack --watch",
    "build:development": "NODE_ENV=development webpack",
    "build:production": "NODE_ENV=production webpack",
    "lint:js": "eslint --color ./src/js",
    "lint:watch": "onchange './src/js/**/*.js' -- npm-run-all --sequential lint:js",
    "push:development": "shopify theme push --environment development",
    "push:staging": "shopify theme push --environment staging",
    "push:uat": "shopify theme push --environment uat",
    "push:production": "shopify theme push --environment production"
  },
  "author": "MMS Studio ðŸ˜º",
  "private": true,
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.13.1",
    "@babel/preset-env": "^7.13.5",
    "@shopify/cli": "^3.57.0",
    "@shopify/theme": "^3.57.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-wesbos": "^4.0.1",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^1.3.6",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "path": "^0.12.7",
    "sass": "^1.89.0",
    "sass-loader": "^14.0.0",
    "source-map-loader": "^5.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-fix-style-only-entries": "^0.6.1"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "./src/**/*.js": [
      "prettier --write"
    ]
  }
}
